
@{
    ViewBag.Title = "Login";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/bootstrap")
<html>
<body>
    <div class="width:100%">

        <form method="post" style="top:200px;width:100%">
            <h1>Login</h1>
            <div>
                <input type="text" name="username" class="" style="width:310px" placeholder="Username" autocomplete="off">
            </div>
            <div>
                <input type="password" name="password" class="" style="width:310px" placeholder="Password" oncontextmenu="return false" onpaste="return false">
            </div>
            <div>
                <button id="submit" class="" type="button">Sign in</button>
            </div>
        </form>
    </div>
    <ul id="supersized" class="quality" style="visibility: visible;height:1180px;">
        <li class="slide-0" style="visibility: visible; opacity: 1;">
            <img src="./img/ice.jpg" style="width: 1903px; left: 0px; top: 0px; height: 1080px;">
        </li>
        <li class="slide-1 prevslide" style="visibility: visible; opacity: 1;">
            <img src="./img/ice.jpg" style="width: 1903px; left: 0px; top: 0px; height: 1080px;">
        </li>
        <li class="slide-2 activeslide" style="visibility: visible; opacity: 1;">
            <img src="./img/ice.jpg" style="width: 1903px; height: 1080px; left: 0px; top: 0px;">
        </li>
    </ul>

</body>
</html>
